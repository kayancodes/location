{% extends 'back-office.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block body %}
    <h1>Liste des membres</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width:5%">id</th>
                <th style="width:15%">pseudo</th>
                <th style="width:10%">Civilite</th>
                <th style="width:10%">prenom</th>
                <th style="width:10%">nom</th>
                <th style="width:25%">email</th>
                <th style="width:10%">role</th>
                <th style="width:15%">actions</th>
            </tr>
        </thead>
        <tbody>
            {% for membre in membres %}
            <tr>
                <td>{{membre.id}}</td>
                <td>{{membre.pseudo}}</td>
                <td>{{membre.civilite | civilite | raw }}</td>
                <td>{{membre.prenom}}</td>
                <td>{{membre.nom}}</td>
                <td>{{membre.email}}</td>
                {# <td>{{ membre.roles | join(",")}}</td> #}
                <td class="align-middle">{{ membre.roles | role }}</td>

                <td>
                    {% include "commun/action.html.twig" with {"id" : membre.id , "update": "register_update", "delete": "register_suppr" } %}
                </td>
            </tr>

            {% else %}
                <tr>
                    <td colspan="7">aucun membres enregistr√© pour le moment</td>
                </tr>

            {% endfor %}
        </tbody>

    </table>
{% endblock %}